<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vumee.cardtest">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:name=".GlobalClass"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".viewtally"></activity>
        <activity android:name=".train" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SplashScreenActivity" />
        <activity android:name=".SearchBarActivity" />
        <activity android:name=".searchwebview" />
        <activity android:name=".pick_from_contacts" />
        <activity android:name=".save_to_contacts" />
        <activity android:name=".type_number_in" />
        <activity android:name=".successfully_sent" />
        <activity android:name=".category_lp" />
        <activity android:name=".notification_lp">
            <intent-filter>
                <action android:name="https" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
    </application>

</manifest>