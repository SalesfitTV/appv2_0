<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/devineblue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/note_item_back_grdient"

        android:padding="8dp">

        <ImageView
            android:id="@+id/text_view_thumbnail"
            android:layout_width="103dp"
            android:layout_height="92dp" />

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="103dp"
            android:layout_toStartOf="@id/text_view_priority"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_view_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text=""
           />

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_title"
            android:layout_alignParentStart="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="2dp"
            android:text="Description"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/text_view_lplink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_description"
            android:layout_alignParentStart="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="6dp"
            android:text="" />

        <Button
            android:id="@+id/sharebtn"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_description"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="91dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/text_view_lplink"
            android:background="@color/greyactivityback"
            android:text="Share"

            android:textColor="#80CBC4" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>